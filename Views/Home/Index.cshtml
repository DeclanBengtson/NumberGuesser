@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   

@{
    ViewBag.Title = "Number Guesser Game";
}

<h2>@ViewBag.Message</h2>

@using (Html.BeginForm("StartNewGame", "Home", FormMethod.Post))
{
    <label for="minRange">Enter Min Range:</label>
    <input type="number" name="minRange" required />

    <label for="maxRange">Enter Max Range:</label>
    <input type="number" name="maxRange" required />

    <input type="submit" value="Start New Game" />
}

@if (Model != null && Model.GuessFormVisible)
{
    @using (Html.BeginForm("MakeGuess", "Home", FormMethod.Post))
    {
        <label for="guess">Enter Your Guess:</label>
        <input type="number" name="guess" required />
        <input type="submit" value="Submit Guess" />
    }
}


</div>


